{
  "name"       : "steckling",
  "description": "Grow your Apps with Steckling.",
  "version"    : "0.0.1",
  "author"     : "Sebastian Senf <contact@mustardamus.com>",
  "repository" : "git://github.com/mustardamus/steckling",
  "bin"        : { "steckling": "./bin/steckling" },
  "engines"    : {
    "npm" : "*",
    "node": "*"
  },
  "scripts"    : {
    "init"   : "npm i -g forever && npm i -g coffee-script && npm i -g mocha",
    "restart": "forever -c coffee -w --watchDirectory ./app/server start app/server/init.coffee",
    "stop"   : "forever stop app/server/init.coffee",
    "start"  : "coffee app/server/init.coffee",
    "test"   : "mocha --compilers coffee:coffee-script --ui bdd --reporter spec test/server/*"
  },

  "dependencies": {
    "coffee-script": "*",
    "stylus"       : "*",
    "express"      : "3.x",
    "mincer"       : "*",
    "uglify-js"    : "*",
    "clean-css"    : "*"
  },

  "devDependencies": {
    "commander"    : "*",
    "logule"       : "*",
    "forever"      : "*",
    "mocha"        : "*",
    "expect.js"    : "*"
  }
}