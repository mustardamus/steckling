{
  "name"       : "steckling",
  "description": "Grow your Apps with Steckling.",
  "version"    : "0.0.1",
  "author"     : "Sebastian Senf <contact@mustardamus.com>",
  "repository" : "git://github.com/mustardamus/steckling",
  "bin"        : { "steckling": "./bin/steckling" },
  "engines"    : {
    "npm" : "*",
    "node": "*"
  },
  "scripts"    : {
    "init" : "npm i -g forever && npm i -g coffee-script",
    "start": "forever -c coffee -w --watchDirectory ./app/server start app/server/init.coffee",
    "stop" : "forever stop app/server/init.coffee",
    "test" : "echo test"
  },

  "dependencies": {
    "coffee-script": "*",
    "stylus"       : "*",
    "express"      : "3.x",
    "mincer"       : "*",
    "uglify-js"    : "*",
    "clean-css"    : "*"
  },

  "devDependencies": {
    "commander"    : "*",
    "logule"       : "*",
    "forever"      : "*"
  }
}